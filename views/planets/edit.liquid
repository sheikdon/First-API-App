{% layout 'layout.liquid' %}
{% block content %}
  <div class="container-sm">
    <form action="/planets/{{planet._id}}?_method=PUT" method="POST">
      <fieldset>
        <legend>Edit
          {{planet.name}}
        </legend>
        <label class="form-label">Name:
        </label>
        <input class="form-control" type="text" name="name" placeholder="enter the name of the RickandMorts planet" value="{{ planet.name }}">
        <label class="form-label">Ready To Live:
        </label>
        <input class="form-check-input" type="checkbox" name="readyToLive"
          {% if planet.readyToLive %}
          checked
          {% endif %}>
        <label class="form-label">Image:
        </label>
        <input class="form-control" type="url" name="image" placeholder="insert desired URL" value="{{ planet.image }}">
      </fieldset>
      <input class="btn btn-dark" type="submit" value="Edit {{planet.name}}">
    </form>
  </div>
{% endblock %}
