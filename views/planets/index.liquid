{% layout 'layout.liquid'%}
{% block content %}
  {% if planets.length > 0%}
    <div>
      <h2 class="display-6">All Worldy Planets</h2>
      <div class="row g-0">
        {% for planet in planets %}
          {%- comment -%}
            <div class="card" style="width: 20rem;">
            <h5 class="card-header">{{ planet.name }}
            </h5>
            <div class="card-body">
            <h5 class="card-title">
            <img src="{{ planet.image}}" style="width: ;14rem">
            {% if planet.status == "Alive" %}
            <span>
            <svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" fill="currentColor" class="bi bi-circle-fill text-success" viewBox="0 0 16 16">
            <circle cx="8" cy="8" r="8"/>
            </svg>
            </span>
            {% else %}
            <span>
            <svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" fill="currentColor" class="bi bi-circle-fill text-danger" viewBox="0 0 16 16">
            <circle cx="8" cy="8" r="8"/>
            </svg>
            </span>
            {% endif %}
            {{ planet.status }}
            -
            {{ planet.species}}
            </h5>
            <p class="card-text">
            Last known location:
            {{ planet.location }}
            </p>
            <p class="card-text">
            Originally from:
            {{ planet.origin }}
            </p>
            <a href="/planets/{{ planet.id }}" class="btn btn-info">
            <p class="card-text">
            <small class="text-muted">View
            {{ planet.name }}
            </small>
            </p>
            </a>
            </div>
          {%- endcomment -%}
          {%- comment -%}
            Version 2
          {%- endcomment -%}
          <div class="cardmb-3" style="max-width: 540px;">
            <div class="row g-0">
              <div class="col-md-4">
                <img src="{{ planet.image}}" class="img-fluid rounded-start" alt="planet image">
              </div>
              <div class="col-md-8">
                <div class="card-body">
                  <h5 class="card-title">
                    {{ planet.name }}
                  </h5>
                  <h5 class="card-text1">
                    {% if planet.readyToLive %}
                      Ready to migrate
                    {% else %}
                      not Ready to Migrate
                    {% endif %}
                    {{ planet.readyToLive }}
                  </h5>
                  <p class="card-textm">
                    <a href="/planets/{{ planet.id }}" class="btn btn-light">
                      <p class="card-text">
                        <small class="text-muted">View
                          {{ planet.name }}
                        </small>
                      </p>
                    </a>
                  </p>
                </div>
              </div>
            </div>
          </div>
        {% endfor %}
      </div>
    </div>
  {% else %}
    <div>
      <h2 class="display-6">No Worldly planets yet... time to add some!</h2>
    </div>
  {% endif %}
{% endblock %}
