{% layout 'layout.liquid' %}
{% block content %}
  <div>
    <h2 class="display-6">All Worldly Planets</h2>
    <div class="row">
      {% for planets in planets %}
        <div class="card">
          <h5 class="card-header">{{planet.name}}
          </h5>
          <div class="card-body">
            <h5 class="card-title">
              {% if planet.readyToEat %}
                Ripe
              {% else %}
                Not Ripe
              {% endif %}
            </h5>
            <p class="card-text">The color of this
              {{planet.name}}
              is
              {{planet.color}}
            </p>
            <a class="btn btn-info" href="/planets/{{planet.id}}">
              View
              {{planet.name}}
            </a>
          </div>
        </div>
      {% endfor %}
    </div>
  </div>
{% endblock %}}}